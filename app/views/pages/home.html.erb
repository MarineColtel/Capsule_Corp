

<div class="container_home">
<h1>Liste des Capsules</h1>
<div id="search">
    <%= simple_form_for :search, url: search_capsules_path, method: :get do |f| %>
    <div class="form-group">
      <%= f.input :query, label: 'Recherche', class: "form-control" %>
    </div>
    <%= f.button :submit, "Rechercher", class: "btn btn-primary" %>
  <% end %>
</div>
  <div class="container d-flex flex-column justify-content-center align-item-center mt-3">
    <% @capsules.each do |capsule| %>
      <div class=".capsule-card m-3">
        <%= image_tag capsule.picture %>
        <div class=".capsule-card-infos">
          <div>
            <div class="d-flex justify-content-center align-item-center">
              <h2><%= capsule.name %></h2>
              <p><%= capsule.year %></p>
            </div>
              <p><%= capsule.description %></p>
          </div>
          <h2 class="card-trip-pricing">Tarif par jour : <%= capsule.price_per_day %>â‚¬</h2>
          <%= link_to 'Show', capsule_path(capsule) %>
        </div>
      </div>
    <% end %>
  </div>
</div>
