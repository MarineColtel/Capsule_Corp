<!-- List of Capsules -->
<div class='main-capsule-container'>
  <h1 class="capsules-title">Liste des [apsu[es</h1>
  <div class="container capsules-container">
    <% @capsules.each do |capsule| %>
      <div class="capsule-card">
        <%= cl_image_tag capsule.photos.first.key, class: "capsule-image" %>
        <div class="capsule-card-infos">
          <div class="capsule-details">
            <h2 class="capsule-name"><%= capsule.name %></h2>
            <p class="capsule-year"><%= capsule.year %></p>
          </div>
          <div>
            <p class="capsule-description"><%= capsule.description %></p>
          </div>
            <div class="footer-card">
              <h2 class="card-trip-pricing">TARIF JOURNALIER <%= capsule.price_per_day %>â‚¬</h2>
              <%= link_to 'Show', capsule_path(capsule), class: "capsule-show-link" %>
            </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
